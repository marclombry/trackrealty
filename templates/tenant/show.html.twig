{% extends 'base.html.twig' %}

{% block title %}Tenant{% endblock %}

{% block body %}
    <h1 class="text-center">Locataires</h1>
      <a class="btn-cloud bg-cloud" href="{{ path('tenant_index') }}">
        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-90deg-left" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M6.104 2.396a.5.5 0 0 1 0 .708L3.457 5.75l2.647 2.646a.5.5 0 1 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 0 1 .708 0z"/>
            <path fill-rule="evenodd" d="M2.75 5.75a.5.5 0 0 1 .5-.5h6.5a2.5 2.5 0 0 1 2.5 2.5v5.5a.5.5 0 0 1-1 0v-5.5a1.5 1.5 0 0 0-1.5-1.5h-6.5a.5.5 0 0 1-.5-.5z"/>
        </svg>
        Revenir
    </a>
    <div class="container bg-cloud my-2">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ tenant.id }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ tenant.firstname }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ tenant.lastname }}</td>
                </tr>
                <tr>
                    <th>Téléphone</th>
                    <td>{{ tenant.phone }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ tenant.email }}</td>
                </tr>
            </tbody>
        </table>
        <div class="d-inline-flex m-1">
            <a class="btn btn-warning mx-1" href="{{ path('tenant_edit', {'id': tenant.id}) }}">edit</a>
        {{ include('tenant/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}